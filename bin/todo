#!/bin/bash

# -----------------------------------------------------------------------------
# todo
# Description: controls todo file
# -----------------------------------------------------------------------------
# Source:
#   onodera-punpun: https://github.com/onodera-punpun/dotfiles
# -----------------------------------------------------------------------------
# Useage:      $ sh ./todo
# -----------------------------------------------------------------------------

input=$1
output=$2
file=$(cat ~/.todo)

if [ $input == "add" ]
then
	echo $output >> ~/.todo
	notify-send Todo: "Item added!"
fi

if [ $input == "show" ]
then
	notify-send Todo_nokill: "$file"
fi

if [ $input == "clear" ]
then
	rm ~/.todo
	touch ~/.todo
	notify-send Todo: "Notifications cleared!"
fi
