#!/usr/bin/env bash

# -----------------------------------------------------------------------------
# bspwm_close
# Description: Closes all windows and then quits bspwm
# -----------------------------------------------------------------------------
# Requires:
#   bspwm
# -----------------------------------------------------------------------------
# Useage:      $ sh ./bspwm_close
# -----------------------------------------------------------------------------

for node_id in $(bspc query -N); do
    bspc node node_id -c
done

bspc quit
