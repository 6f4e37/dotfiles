#!/bin/bash

# -----------------------------------------------------------------------------
# open_sidebar_temp
# Description: open notification sidebar temporarily
# -----------------------------------------------------------------------------
# Requires:
#   bspwm
#   dunst
# -----------------------------------------------------------------------------
# Useage:      $ sh ./open_sidebar
# -----------------------------------------------------------------------------

bspc config right_padding 600
sleep 3
killall dunst
sleep 0.2
bspc config right_padding 0
sleep 0.1
dunst & disown
