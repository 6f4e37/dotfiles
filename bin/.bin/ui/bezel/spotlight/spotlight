#!/usr/bin/env bash

# -----------------------------------------------------------------------------
# spotlight
# Description: Bezel UI software launcher
# -----------------------------------------------------------------------------
# Requires:
#   dmenu
# -----------------------------------------------------------------------------
# Useage:      $ ./spotlight
# -----------------------------------------------------------------------------

# Source color theme which defines color_{0-15}
source "$HOME/.bin/ui/colors"

# set local colors
color_nf="$(get_color_black)"
color_nb="$(get_color_lightgrey)"
color_sf="$(get_color_darkyellow)"
color_sb="$(get_color_darkgrey)"
color_dc="$(get_color_black)"

bezel_font='Source Code Pro:Regular:size=12'

dmenu_run -h "70" -w "1000" -l "3" -x "940" -y "690" -fn "${bezel_font}" -nb "${color_nb}" -nf "${color_nf}" -sb "${color_sb}" -sf "${color_sf}" -dc "${color_dc}" -dim ".65" -q -i
