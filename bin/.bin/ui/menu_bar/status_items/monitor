#!/usr/bin/env bash

# monitor array
declare -A monitor
monitor['num']=''
# monitor name
monitor['name']=''
# monitor width
monitor['width']=''
# monitor height
monitor['height']=''
# monitor horizontal padding
monitor['xpadding']=''
# monitor vertical padding
monitor['ypadding']=''

# sets monitor parameters given monitor name
function select_monitor() {
    local name="$1"

    case "${name}" in
        'default'|'eDP-1')
            monitor['num']='1'
            monitor['name']='eDP-1'
            monitor['width']='2880'
            monitor['height']='1800'
            monitor['xpadding']="$(bspc config -m 1 top_padding)"
            monitor['ypadding']="$(bspc config -m 1 window_gap)"
            ;;
        'HDMI-3')
            monitor['num']='2'
            monitor['name']='HDMI-3'
            monitor['width']='1080'
            monitor['height']='1920'
            monitor['xpadding']="$(bspc config -m 2 top_padding)"
            monitor['ypadding']="$(bspc config -m 2 window_gap)"
            ;;
        *)
            exit 1
            ;;
    esac
}

# returns monitor name
function get_monitor_num() {
    echo "${monitor['num']}"
}

# returns monitor name
function get_monitor_name() {
    echo "${monitor['name']}"
}

# returns monitor width
function get_monitor_width() {
    echo "${monitor['width']}"
}

# returns monitor height
function get_monitor_height() {
    echo "${monitor['height']}"
}

# returns monitor horizontal padding
function get_monitor_xpadding() {
    echo "${monitor['xpadding']}"
}

# returns monitor vertical padding
function get_monitor_ypadding() {
    echo "${monitor['ypadding']}"
}
