#!/usr/bin/env bash

# -----------------------------------------------------------------------------
# panel
# Description: Starts the menu bar which contains status items
# -----------------------------------------------------------------------------
# Location: $HOME/.dotfiles/bin/bspwm/menu_bar
# -----------------------------------------------------------------------------

unset status_items
trap 'kill "${status_items[@]}"' EXIT

$HOME/.bin/ui/menu_bar/status_items/mpd_status & status_items+=($!)
$HOME/.bin/ui/menu_bar/status_items/date_status & status_items+=($!)
$HOME/.bin/ui/menu_bar/status_items/battery_status & status_items+=($!)

wait
