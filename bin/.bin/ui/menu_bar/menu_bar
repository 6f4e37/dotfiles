#!/usr/bin/env bash

# -----------------------------------------------------------------------------
# panel
# Description: Starts the menu bar which contains status items
# -----------------------------------------------------------------------------
# Location: $HOME/.bin/ui/menu_bar/menu_bar
# -----------------------------------------------------------------------------

unset status_items

function finish() {
    # kill all the status items
    kill "${status_items[@]}"

    # remove menu_bar temp_dir
    # rmdir "${temp_dir}"
}

function main() {
    # start status items
    "$HOME/.bin/ui/menu_bar/status_items/mpd_status" & status_items+=($!)
    "$HOME/.bin/ui/menu_bar/status_items/date_status" & status_items+=($!)
    "$HOME/.bin/ui/menu_bar/status_items/battery_status" & status_items+=($!)

    # wait for background process to finish
    wait
}

# cleanup on exit
trap finish EXIT

# main
main "$@"
