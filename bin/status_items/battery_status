#!/usr/bin/env bash

# -----------------------------------------------------------------------------
# battery
# Description: Displays status item showing information about battery level
# -----------------------------------------------------------------------------
# Requires:
#   acpi
#   xftwidth
#   dzen
# -----------------------------------------------------------------------------
# Useage:      $ ./battery
# -----------------------------------------------------------------------------

# Source color theme which defines color_{0-15}
source "$HOME/.dotfiles/bin/status_items/color_theme"

# set local colors
color_fg="${color_white}"
color_bg="${color_black}"
color_state="${color_lightgrey}"
color_high="${color_green}"
color_medium="${color_yellow}"
color_low="${color_red}"

# name of the panel
panel_name='battery_status_item'

# panel font
panel_font='Source Code Pro:size=7'

# panel layer
panel_layer='lower'

# panel height
panel_height='40'

# fifo
pipe="/tmp/${panel_name}.fifo"

# associative array with information about current text
declare -A text
text=( ["format"]="" ["width"]="" )

# associative array with information about panel
declare -A panel
panel=( ["pid"]="" ["width"]="" )

function finish() {
    # kill the panel
    kill "${panel['pid']}"

    # remove the fifo
    rm -f "${pipe}"
}

# Updates the text array to have a formatted info and the correct xft width
function update_text() {
    local capacity=$(cat /sys/class/power_supply/BAT0/capacity)
    local state=$(cat /sys/class/power_supply/BAT0/status)

    if [[ "${capacity}" -gt 70 ]]; then
        text["format"]="^fg(${color_state})${state} ^fg(${color_high})${capacity}"
    elif [[ "${capacity}" -gt 30 ]]; then
        text["format"]="^fg(${color_state})${state} ^fg(${color_medium})${capacity}"
    else
        text["format"]="^fg(${color_state})${state} ^fg(${color_low})${capacity}"
    fi

    text["width"]=$( xftwidth 'Source Code Pro:size=7' "-${state} ${capacity}-" )
}

function update_panel() {
    # parameters for spawned dzen
    local dzen_args=( -title-name "${panel_name}" -ta c -fn "${panel_font}" -e "onstart=${panel_layer}" -y '25' -h "${panel_height}" -bg "${color_bg}")

    # no panel running yet
    if [[ -z "${panel['pid']}" ]]; then
        # create new panel with current width
        tail -f "${pipe}" > >(dzen2 "${dzen_args[@]}" -w "${text['width']}" -x "$(( 2830 - ${text['width']} ))") &

        # update panel info
        panel['pid']=$(echo $!)
        panel['width']=$(echo "${text['width']}")

    # panel is running but doesn't have the correct width
    elif [[ "${panel['width']}" != "${text['width']}" ]]; then
        # kill oldpanel
        kill "${panel['pid']}"

        # create new panelwith current width
        tail -f "${pipe}" > >(dzen2 "${dzen_args[@]}" -w "${text['width']}" -x "$(( 2830 - ${text['width']} ))") &

        # update panelinfo
        panel['pid']=$(echo $!)
        panel['width']=$(echo "${text['width']}")
    fi
}

# cleanup on exit
trap finish EXIT

while
    :
do
    # make the fifo
    if [[ ! -p "${pipe}" ]]; then
        mkfifo "${pipe}"
    fi

    # update text array
    update_text

    # update panel array
    update_panel

    # pipe to fifo
    echo "${text['format']}" >"${pipe}"

    # wait for 1 minute
    sleep 60
done
