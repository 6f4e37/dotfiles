#!/usr/bin/env bash

# -----------------------------------------------------------------------------
# Description: Defines colorscheme for use with other shell scripts
# Location: $HOME/.local/bin/colors
# -----------------------------------------------------------------------------

main() {
    # Black
    readonly color0="#000000"
    readonly color8="#686049"
    # Red
    readonly color1="#bd2024"
    readonly color9="#bd2024"
    # Green
    readonly color2="#00721b"
    readonly color10="#00721b"
    # Yellow
    readonly color3="#e9c761"
    readonly color11="#e9c761"
    # Blue
    readonly color4="#2661ac"
    readonly color12="#2661ac"
    # Magenta
    readonly color5="#682599"
    readonly color13="#682599"
    # Cyan
    readonly color6="#338880"
    readonly color14="#338880"
    # White
    readonly color7="#b6ad92"
    readonly color15="#ece3c3"

    readonly background="${color15}"
    readonly foreground="${color0}"
}

main "$@"
