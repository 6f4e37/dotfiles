#!/bin/sh

# -----------------------------------------------------------------------------
# xinitrc
# Description: Config file for startx
# -----------------------------------------------------------------------------
# Location: $HOME/.xinitrc
# -----------------------------------------------------------------------------

# Source {{{
# -----------------------------------------------------------------------------
if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi

# xresources
[[ -f ~/.Xresources ]] && xrdb -merge -I$HOME ~/.Xresources
# -----------------------------------------------------------------------------
# }}}

# Fonts {{{
# -----------------------------------------------------------------------------
xset +fp /usr/share/fonts/misc/
xset +fp /usr/share/fonts/TTF/
xset +fp /usr/share/fonts/OTF/
xset +fp /usr/share/fonts/local/
xset fp rehash
# -----------------------------------------------------------------------------
# }}}

# Display {{{
# -----------------------------------------------------------------------------
# terminal
urxvtd -q -f -o

# menubar
polybar top &

# wallpaper
nitrogen --restore &

# screen powersave
xset +dpms
xset dpms 0 0 300

#calibrate display
redshift &
# -----------------------------------------------------------------------------
# }}}

# Sound {{{
# -----------------------------------------------------------------------------
# mpd
mpd &
# -----------------------------------------------------------------------------
# }}}

# Input {{{
# -----------------------------------------------------------------------------
# keyboard
xset r rate 200 35

# mouse
xsetroot -cursor_name left_ptr
unclutter &

# hotkeys
sxhkd &
# -----------------------------------------------------------------------------
# }}}

# Window Manager {{{
# -----------------------------------------------------------------------------
exec bspwm
# -----------------------------------------------------------------------------
# }}}

