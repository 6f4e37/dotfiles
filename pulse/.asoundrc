# -----------------------------------------------------------------------------
# .asoundrc
# Description: Config file for alsa
# -----------------------------------------------------------------------------
# Location: $HOME/.asoundrc
# -----------------------------------------------------------------------------

# Default {{{
# -----------------------------------------------------------------------------
pcm.!default {
  type pulse
  fallback "sysdefault"
  hint {
    show on
    description "Default ALSA Output (currently PulseAudio Sound Server)"
  }
}

ctl.!default {
  type pulse
  fallback "sysdefault"
}
# -----------------------------------------------------------------------------
# }}}

