"=[Settings]====

" title
set titlestring="Firefox"

"colors
colorscheme godo

" animations
set animations=false

" hide gui stuff
" set toolbars=noaddons,nobookmarks,nomenu,nonavigation,notabs
set toolbars=none

" statusbar
" set status="input,location,bookmark,history,position"

" show link destination in status line
set showstatuslinks=1

" Autocomplete using Firefox Awesomebar subsystem
set complete=tbl

" Hintchar
set hintchars=hjklasdfgyuiopqwertnmzxcvb

" only show 10 suggestions
" set maxitems=10

" keep messages around for 2 seconds
set messagetimeout=2000

" startpage search
set defsearch=ixquick

"
set wildmode="full"

" Select the longest autocomplete match
set wildmode='list:full'

" Don't beep
set noerrorbells

" dont auto focus insert
set focuscontent

"=[Mappings]=====

" Faster Scrolling
noremap j 5j
noremap k 5k
noremap h 5h
noremap l 5l

" Press 'K' to go to previous tab
nnoremap K gT

" Press 'J' to go to next tab
nnoremap J gt

" Press 'x' to delete current tab
nnoremap x :tabclose<cr>

" stay in insert mode
" nnoremap I <S-Esc>


" Search
cabbrev "g google
cabbrev "c googletranslate
cabbrev "v youtube
cabbrev "w wikipedia
cabbrev "a amazon
cabbrev "t torrentz

" Websites
cabbrev "r https://www.reddit.com
cabbrev "y https://www.youtube.com/feed/subscriptions
cabbrev "4 http://boards.4chan.org/g/catalog
