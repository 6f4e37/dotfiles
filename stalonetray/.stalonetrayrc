# -----------------------------------------------------------------------------
# stalonetrayrc
# Description: Config file for stalonetray
# -----------------------------------------------------------------------------
# Location: $HOME/.stalonetrayrc
# -----------------------------------------------------------------------------

# General {{{
# -----------------------------------------------------------------------------
# set dockapp mode
dockapp_mode none

# controls the amount of logging output
log_level err

# tray will grow in the direction opposite to one specified by grow_gravity
grow_gravity NE

# icon placement gravity
icon_gravity SW

# hide tray`s window from the taskbar
skip_taskbar true

# make a tray`s window sticky across the desktops/pages
sticky true

# disables shrink-back mode
no_shrink false

# set the EWMH-compatible window layer
window_layer bottom

# set the EWMH-compatible window type
window_type dock

# whether to use vertical layout
vertical false

# whether to operate on X server synchronously (SLOOOOW)
xsync false
# -----------------------------------------------------------------------------
# }}}

# Appearance {{{
# -----------------------------------------------------------------------------
# tray's geometry in standard X notation
geometry 1x1-0+20

# maximal tray dimensions; 0 means no limit
max_geometry 40x40

# specifies dimensions of typical icon slot
icon_size 40

# tray background color
background "#282828"

# set tinting color
tint_color white

# set tinting level 0 (disabled) to 255
tint_level 0

# set trays window decorations
decorations none

# enable/disable scrollbars
scrollbars none

# enable fuzzy edges and set fuzziness level
fuzzy_edges 0

# whether to use root-transparency
transparent false

# whether to use pseudo-transparency
parent_bg false

# enable/disable window struts for tray window
window_strut auto
# -----------------------------------------------------------------------------
# }}}

# vim:foldmethod=marker:foldlevel=0: set filetype=config:
