# -----------------------------------------------------------------------------
# gitconfig
# Description: Config file for git
# -----------------------------------------------------------------------------
# Location: $HOME/.gitconfig
# -----------------------------------------------------------------------------

# -----------------------------------------------------------------------------
# => General Settings
# -----------------------------------------------------------------------------
# {{{
[core]
    editor = /usr/bin/vim
[user]
    name = twilton
    email = github.twilton@gmail.com
# }}}

# -----------------------------------------------------------------------------
# => Colors
# -----------------------------------------------------------------------------
# {{{
[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = red reverse
    local = blue
    remote = green
[color "diff"]
    meta = yellow
    frag = magenta
    old = red bold
    new = green
    plain = white
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
# }}}

# -----------------------------------------------------------------------------
# => Command Settings
# -----------------------------------------------------------------------------
# {{{
[push]
    default = upstream
[pull]
    default = current
[diff]
    mnemonicprefix = true
[branch]
    autosetuprebase = always
[apply]
    whitespace = nowarn
# }}}

# -----------------------------------------------------------------------------
# => Aliases
# -----------------------------------------------------------------------------
# {{{
[alias]
    # -------------------------------------------------------------
    # => General
    # -------------------------------------------------------------
    # {{{
    # List git aliases
    la = !git config -l | grep alias | cut -c 7-

    # Show working-tree status
    st = status -s

    # Add
    a = add
    ai = add --interactive
    au = add -u

    # Clone repository into new directory
    cl = clone

    # Record changes to repository
    cm = commit

    # Checkout branch or paths to working tree
    co = checkout

    # List, create, or delete branches
    br = branch
    bra = branch -ra
    branch = branch -ra
    # }}}

    # -------------------------------------------------------------
    # => Lists / Logs
    # -------------------------------------------------------------
    # {{{
    # Default short git log
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar)%Creset' --abbrev-commit --date=relative
    # List commits showing changed files
    ll = log --graph --oneline --stat --decorate
    # List commits showing changed files
    lc = log @{1}.. --stat --no-merges
    # See history of a file
    lf = log -p -M --follow --stat --
    # List remotes
    rem = "!git config -l | grep remote.*url | tail -n +2"
    # }}}

    # -------------------------------------------------------------
    # => Resets
    # -------------------------------------------------------------
    # {{{
    # Reset current HEAD to specified state
    r = reset
    # }}}

    # -------------------------------------------------------------
    # => Find stuff
    # -------------------------------------------------------------
    # {{{
    # Find a file path in codebase
    f = !git ls-files | grep -i
    # }}}

    # -------------------------------------------------------------
    # => Other
    # -------------------------------------------------------------
    # {{{
    # }}}
# }}}

# vim:foldmethod=marker:foldlevel=0: set filetype=conf:
