# -----------------------------------------------------------------------------
# Description: General config file for CAVA
# Location: $XDG_CONFIG_HOME/cava/config
# -----------------------------------------------------------------------------

# General {{{
# -----------------------------------------------------------------------------
[general]
# Accepts only non-negative values.
framerate = 121

# The number of bars (0-200). 0 sets it to auto (fill up console).
# Bars' width and space between bars in number of characters.
; bars = 0
; bar_width = 2
; bar_spacing = 1
# -----------------------------------------------------------------------------
# }}}

# Input {{{
# -----------------------------------------------------------------------------
[input]
# Audio capturing method. Possible methods are: 'pulse', 'alsa' or 'fifo'.
method = pulse
source = auto
# -----------------------------------------------------------------------------
# }}}

# Output {{{
# -----------------------------------------------------------------------------
[output]
# 'stereo' mirrors both channels with low frequencies in center.
# 'mono' averages both channels and outputs left to right lowest to highest frequencies.
channels = mono
# -----------------------------------------------------------------------------
# }}}

# Color {{{
# -----------------------------------------------------------------------------
[color]
# Colors can be one of seven predefined: black, blue, cyan, green, magenta, red, white, yellow.
# Or defined by hex code '#xxxxxx' (hex code must be within '').
foreground = black
# -----------------------------------------------------------------------------
# }}}

# Smoothing {{{
# -----------------------------------------------------------------------------
[smoothing]
# Percentage value for integral smoothing. Takes values from 0 - 100.
# Higher values means smoother, but less precise. 0 to disable.
integral = 20

# "Monstercat smoothing" with or without "waves". Set to 0 to disable.
monstercat = 0
waves = 0

# Set gravity percentage for "drop off". Higher values means bars will drop faster.
# Accepts only non-negative values. 50 means half gravity, 200 means double. Set to 0 to disable.
gravity = 0
# -----------------------------------------------------------------------------
# }}}

# vim:foldmethod=marker:foldlevel=0
