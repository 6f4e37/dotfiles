    # open_sidebar

# Mac Shortcuts

# Screen Backlight Control
@XF86MonBrightness{Down,Up}
    {scrot ~/pics/scrots/%b%d::%H%M%S.png -q '100', scrotw}

# Application Control
XF86Launch{A,B}
    {todo show, todo show}

# Keyboard Backlight Control
XF86KbdBrightness{Down,Up}
    kbdlight {down,up}

shift + XF86KbdBrightness{Down,Up}
    kbdlight {off,max}

# Song Prev / Play / Next
XF86Audio{Prev,Play,Next}
    mpc {prev,toggle,next}

# Volume Mute / Lower / Raise
XF86Audio{Mute,LowerVolume,RaiseVolume}
    {pactl set-sink-mute @DEFAULT_SINK@ toggle,\
    pactl set-sink-volume @DEFAULT_SINK@ -5%,\
    pactl set-sink-volume @DEFAULT_SINK@ +5%}
    # {amixer -c 1 -q set Master toggle; amixer -c 0 -q set PCM toggle,\
    # amixer -c 1 -q set Master 5dB- unmute; amixer -c 0 -q set PCM 5dB- unmute,\
    # amixer -c 1 -q set Master 5dB+ unmute; amixer -c 0 -q set PCM 5dB+ unmute}
    # amixer -c 1 -q set Master {toggle,5dB- unmute,5dB+ unmute};
    # amixer -c 2 -q set PCM {toggle,5dB- unmute,5dB+ unmute}

