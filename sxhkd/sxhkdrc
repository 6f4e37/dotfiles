# -----------------------------------------------------------------------------
# sxhkdrc
# Description: Config file for sxhkd
# -----------------------------------------------------------------------------
# Location: $HOME/.config/sxhkd/sxhkdrc
# -----------------------------------------------------------------------------

# -----------------------------------------------------------------------------
# => System
# -----------------------------------------------------------------------------
# {{{
# quit window manager
super + shift + q
    "$HOME/.dotfiles/bin/ui/window_manager/bspwm_close"

# reload sxhkd
super + shift + r
    pkill -USR1 -x sxhkd

# lock
super + shift + s
    "$HOME/.dotfiles/bin/ui/bezel/lock/lock"
# }}}

# -----------------------------------------------------------------------------
# => Desktop
# -----------------------------------------------------------------------------
# {{{
super + shift + m
    bspc desktop -l 'next'
# }}}

# -----------------------------------------------------------------------------
# => Workspace
# -----------------------------------------------------------------------------
# {{{
# Change workspaces
super + {1,2,3,4,5}
    bspc desktop -f '^'{'1','2','3','4','5'}
# }}}

# -----------------------------------------------------------------------------
# => Node
# -----------------------------------------------------------------------------
# {{{
# change node tile method
super + {t,shift + t,f,m}
    bspc node -t {'tiled','~pseudo_tiled','~floating','~fullscreen'}

# close node
super + shift + c
    bspc node -c

# resize tiled node
super + shift + {l,h}
    S={'+40','-40'}; \
    bspc node '@west' -r "${S}" || \
    bspc node '@east' -r "${S}"

super + shift + {j,k}
    S={'+40','-40'}; \
    bspc node '@south' -r "${S}" || \
    bspc node '@north' -r "${S}"

# change to selected node by location
super + {h,j,k,l}
    bspc node -f {'west','south','north','east'}

# change to selected node by prev / next
super + {_,shift + }Tab
    bspc node -f {'prev','next'}'.local'

# move selected node forward / backward in tile
super + {comma,period}
    bspc node '@/' -C {'backward','forward'}

# set new node preselection
super + ctrl + {h,j,k,l}
    bspc node -p {'~west','~south','~north','~east'}

# move node to workspace
super + shift + {1,2,3,4,5}
    bspc node -d '^'{'1','2','3','4','5'}
# }}}

# -----------------------------------------------------------------------------
# => Mouse
# -----------------------------------------------------------------------------
# {{{
# focus
~button1
    bspc pointer -g focus

# start move/resize
super + button{1-3}
    ; bspc pointer -g {move,resize_side,resize_corner}

# end move/resize
super + @button{1-3}
    bspc pointer -u
# }}}

# -----------------------------------------------------------------------------
# => Programs
# -----------------------------------------------------------------------------
# {{{
# Open new terminal
super + shift + Return
    urxvtc

# Open launcher
super + p
    "$HOME/.dotfiles/bin/ui/bezel/spotlight/spotlight"

# Open web browser
super + w
    firefox

# Open file manager
super + r
    urxvtc -e ranger

# Open music player
super + n
    urxvtc -e ncmpcpp
# }}}

# -----------------------------------------------------------------------------
# => Platform specific keys
# -----------------------------------------------------------------------------
# {{{
# Screen Backlight Control
@XF86MonBrightness{Down,Up}
    "$HOME/.dotfiles/bin/ui/bezel/backlight/backlight" {'down','up'}

super + {F1,F2}
    "$HOME/.dotfiles/bin/ui/bezel/backlight/backlight" {'down','up'}

shift + @XF86MonBrightness{Down,Up}
    "$HOME/.dotfiles/bin/ui/bezel/backlight/backlight" {'min','max'}

super + shift + {F1,F2}
    "$HOME/.dotfiles/bin/ui/bezel/backlight/backlight" {'min','max'}

# Application Control
# XF86Launch{A,B}

# Keyboard Backlight Control
XF86KbdBrightness{Down,Up}
    "$HOME/.dotfiles/bin/ui/bezel/keys/keys" {'down','up'}

super + {F5,F6}
    "$HOME/.dotfiles/bin/ui/bezel/keys/keys" {'down','up'}

shift + XF86KbdBrightness{Down,Up}
    "$HOME/.dotfiles/bin/ui/bezel/keys/keys" {'min','max'}

super + shift + {F5,F6}
    "$HOME/.dotfiles/bin/ui/bezel/keys/keys" {'min','max'}

# Song Prev / Play / Next
XF86Audio{Prev,Play,Next}
    mpc {'prev','toggle','next'}

super + s ; {h,p,l}
    mpc {'prev','toggle','next'}

super + s ; {_,shift + }o
    paswitch {'alsa_output.usb-iFi__by_AMR__iFi__by_AMR__HD_USB_Audio-00.analog-stereo', \
    'alsa_output.pci-0000_00_1b.0.analog-stereo'}

# Volume Mute / Lower / Raise
XF86Audio{Mute,LowerVolume,RaiseVolume}
    "$HOME/.dotfiles/bin/ui/bezel/volume/volume" {'toggle','down','up'}

super + {F10,F11,F12}
    "$HOME/.dotfiles/bin/ui/bezel/volume/volume" {'toggle','down','up'}

shift + XF86Audio{LowerVolume,RaiseVolume}
    "$HOME/.dotfiles/bin/ui/bezel/volume/volume" {'min','max'}

super + shift + {F11,F12}
    "$HOME/.dotfiles/bin/ui/bezel/volume/volume" {'min','max'}
# }}}

# vim:foldmethod=marker:foldlevel=0
