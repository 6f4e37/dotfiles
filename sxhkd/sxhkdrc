# -----------------------------------------------------------------------------
# sxhkdrc
# Description: Config file for sxhkd
# -----------------------------------------------------------------------------
# Location: $HOME/.config/sxhkd/sxhkdrc
# -----------------------------------------------------------------------------

# -----------------------------------------------------------------------------
# => System
# -----------------------------------------------------------------------------
# {{{
# quit bspwm
super + shift + q
    $HOME/.dotfiles/bin/wm/bspwm_close

# reload sxhkd 
super + shift + r
    pkill -USR1 -x sxhkd

# lock
super + shift + s
    $HOME/.dotfiles/bin/wm/lock/lock
# }}}

# -----------------------------------------------------------------------------
# => Desktop
# -----------------------------------------------------------------------------
# {{{
super + shift + m
    bspc desktop -l next
# }}}

# -----------------------------------------------------------------------------
# => Workspace
# -----------------------------------------------------------------------------
# {{{
# Change workspaces
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'
# }}}

# -----------------------------------------------------------------------------
# => Node
# -----------------------------------------------------------------------------
# {{{
# change node tile method
super + {t,shift + t,f,m}
    bspc node -t {'tiled','~pseudo_tiled','~floating','~fullscreen'}

# close node
super + shift + c
    bspc node -c

# resize tiled node
super + shift + {l,h}
    S={+,-}; \
    bspc node @west -r "${S}"50 || \
    bspc node @east -r "${S}"50

super + shift + {j,k}
    S={+,-}; \
    bspc node @south -r "${S}"50 || \
    bspc node @north -r "${S}"50

# change to selected node by location
super + {h,j,k,l}
    bspc node -f {west,south,north,east}

# change to selected node by prev / next
super + {_,shift + }Tab
    bspc node -f {prev,next}.local

# move selected node forward / backward in tile
super + {comma,period}
    bspc node @/ -C {backward,forward}

# set new node preselection
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}
# }}}

# -----------------------------------------------------------------------------
# => Mouse
# -----------------------------------------------------------------------------
# {{{
# focus
~button1
    bspc pointer -g focus

# start move/resize
super + button{1-3}
    ; bspc pointer -g {move,resize_side,resize_corner}

# end move/resize
super + @button{1-3}
    bspc pointer -u
# }}}

# -----------------------------------------------------------------------------
# => Programs
# -----------------------------------------------------------------------------
# {{{
# Open new terminal
super + shift + Return
    urxvtc

# Open dmenu
super + p
    $HOME/.dotfiles/bin/wm/bezel/spotlight

# Open firefox
super + w
    firefox

# Open ranger in urxvt
super + r
    urxvtc -e ranger

# Open ncmpcpp in urxvt
super + n
    urxvtc -e ncmpcpp
# }}}

# -----------------------------------------------------------------------------
# => Platform specific keys
# -----------------------------------------------------------------------------
# {{{
# Screen Backlight Control
@XF86MonBrightness{Down,Up}
    light {-U,-A} 5

shift + @XF86MonBrightness{Down,Up}
    light -S {5,100}

# Application Control
# XF86Launch{A,B}

# Keyboard Backlight Control
XF86KbdBrightness{Down,Up}
    kbdlight {down,up}

shift + XF86KbdBrightness{Down,Up}
    kbdlight {off,max}

# Song Prev / Play / Next
XF86Audio{Prev,Play,Next}
    mpc {prev,toggle,next}

super + s ; {h,p,l}
    mpc {prev,toggle,next}

super + s ; {_,shift + }o
    paswitch {alsa_output.usb-iFi__by_AMR__iFi__by_AMR__HD_USB_Audio-00.analog-stereo, \
    alsa_output.pci-0000_00_1b.0.analog-stereo}

# Volume Mute / Lower / Raise
XF86Audio{Mute,LowerVolume,RaiseVolume}
    {$HOME/.dotfiles/bin/wm/bezel/volume '!',\
    $HOME/.dotfiles/bin/wm/bezel/volume '-',\
    $HOME/.dotfiles/bin/wm/bezel/volume '+'}

super + {shift + F11,F11,F12}
    {$HOME/.dotfiles/bin/wm/bezel/volume '!',\
    $HOME/.dotfiles/bin/wm/bezel/volume '-',\
    $HOME/.dotfiles/bin/wm/bezel/volume '+'}
# }}}

# vim:foldmethod=marker:foldlevel=0
