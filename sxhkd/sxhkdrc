## BSPWM / SXHKD Controls

# quit bspwm
super + shift + q
    bspc quit

# reload sxhkd 
super + Escape
    pkill -USR1 -x sxhkd

# close window
super + shift + c
    bspc window -c

# change tile method
super + {f,m}
    bspc window -t {floating,fullscreen}

# change selected window ( -f to focus | -s to swap )
super + {h,j,k,l}
    bspc window -f {left,down,up,right}

super + {_,shift + }Tab
   bspc window -f {prev,next}

super + bracket{left,right}
   bspc window -f {last,last}

# super + {comma,period}
    # bspc desktop -C {backward,forward}

# resize tiled windows 
super + shift + {l,h}
    S={+,-}; \
    bspc window -e left $\{S\}50 || \
    bspc window -e right $\{S\}50

super + shift + {j,k}
    S={+,-}; \
    bspc window -e down $\{S\}50 || \
    bspc window -e up $\{S\}50

# Change workspaces 
super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}


~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u

super + {comma,period,shift + comma,shift + period}
    bspc window --presel {down,up,left,right}

# wm independent hotkeys

super + shift + Return
    urxvtc

super + p
    dmenu_run -h "70" -w "1000" -l "3" -x "940" -y "690" -fn "Source Code Pro for Powerline:Regular:size=12" -nb "#c5c8c6" -nf "#1d1f21" -sb "#707880" -sf "#DE935F" -dc "#1D1F21" -dim ".65" -q -i
    # dmenu_run -h "30" -fn "Source Code Pro for Powerline:Regular:size=7" -nb "#1D1f21" -nf "#707880" -sb "#DE935F" -sf "#1D1F21" -dc "#1D1F21" -dim ".65" -q -i

super + w
    firefox

super + r
    urxvtc -e ranger

super + n
    urxvtc -e ncmpcpp

super + i
    urxvtc -e weechat

super + backslash
    bash /home/godo/scripts/panel/notifications_bar_right.sh

# Mac Shortcuts

# Screen Backlight Control
XF86MonBrightness{Down,Up}
    bash $SCRIPTS/notifications/{current_battery.sh,current_weather.sh}

# Launch A/B
# XF86Launch{A,B}

# Keyboard Backlight Control
XF86KbdBrightness{Down,Up}
    kbdlight {down,up}

shift + XF86KbdBrightness{Down,Up}
    kbdlight {off,max}

# Song Prev / Play / Next
XF86Audio{Prev,Play,Next}
    mpc {prev,toggle,next}

# Volume Mute / Lower / Raise
XF86Audio{Mute,LowerVolume,RaiseVolume}
    amixer -c 1 -q set Master {toggle,5dB- unmute,5dB+ unmute}

