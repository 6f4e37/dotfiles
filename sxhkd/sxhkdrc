# -----------------------------------------------------------------------------
# sxhkdrc
# Description: Config file for sxhkd
# -----------------------------------------------------------------------------
# Location: $HOME/.config/sxhkd/sxhkdrc
# -----------------------------------------------------------------------------

# -----------------------------------------------------------------------------
# => System
# -----------------------------------------------------------------------------
# {{{
# quit bspwm
super + shift + q
    $HOME/.dotfiles/bin/bspwm/bspwm_close

# reload sxhkd 
super + shift + r
    pkill -USR1 -x sxhkd

# lock
super + shift + s
    $HOME/.dotfiles/bin/lock/lock

# }}}

# -----------------------------------------------------------------------------
# => Desktop
# -----------------------------------------------------------------------------
# {{{
super + shift + m
    bspc desktop -l next
# }}}

# -----------------------------------------------------------------------------
# => Workspace
# -----------------------------------------------------------------------------
# {{{
# Change workspaces
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# }}}

# -----------------------------------------------------------------------------
# => Node
# -----------------------------------------------------------------------------
# {{{
# change node tile method
# super + {t,shift + t,f,m}
    # bspc node -t {'tiled','~pseudo_tiled','~floating','~fullscreen'}
super + {t,shift + t,f,m}
    bspc node -t {'tiled','~pseudo_tiled','~floating','~fullscreen'}

# close node
super + shift + c
    bspc node -c

# resize tiled node
super + shift + {l,h}
    S={+,-}; \
    bspc node @west -r "${S}"50 || \
    bspc node @east -r "${S}"50

super + shift + {j,k}
    S={+,-}; \
    bspc node @south -r "${S}"50 || \
    bspc node @north -r "${S}"50

# change to selected node by location
super + {h,j,k,l}
    bspc node -f {west,south,north,east}

# change to selected node by prev / next
super + {_,shift + }Tab
    bspc node -f {prev,next}.local

# move selected node forward / backward in tile
super + {comma,period}
    bspc node @/ -C {backward,forward}

# set new node preselection
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# }}}

# -----------------------------------------------------------------------------
# => Mouse
# -----------------------------------------------------------------------------
# {{{
# focus
~button1
    bspc pointer -g focus

# start move/resize
super + button{1-3}
    ; bspc pointer -g {move,resize_side,resize_corner}

# end move/resize
super + @button{1-3}
    bspc pointer -u

# }}}

# -----------------------------------------------------------------------------
# => Programs
# -----------------------------------------------------------------------------
# {{{
# Open new terminal
super + shift + Return
    urxvtc

# Open dmenu
super + p
    dmenu_run -h "70" -w "1000" -l "3" -x "940" -y "690" -fn "Source Code Pro for Powerline:Regular:size=12" -nb "#c5c8c6" -nf "#1d1f21" -sb "#707880" -sf "#DE935F" -dc "#1D1F21" -dim ".65" -q -i

# Open firefox
super + w
    firefox

# Open ranger in urxvt
super + r
    urxvtc -e ranger

# Open ncmpcpp in urxvt
super + n
    urxvtc -e ncmpcpp

# toggle sidebar
super + backslash
    $HOME/.dotfiles/bin/bspwm/sidebar_toggle

# }}}

# -----------------------------------------------------------------------------
# => Platform specific keys
# -----------------------------------------------------------------------------
# {{{
# Screen Backlight Control
@XF86MonBrightness{Down,Up}
    xbacklight {-dec,-inc} 5

shift + @XF86MonBrightness{Down,Up}
    xbacklight -set {5,100}

# Application Control
# XF86Launch{A,B}

# Keyboard Backlight Control
XF86KbdBrightness{Down,Up}
    kbdlight {down,up}

shift + XF86KbdBrightness{Down,Up}
    kbdlight {off,max}

# Song Prev / Play / Next
XF86Audio{Prev,Play,Next}
    mpc {prev,toggle,next}

{_,shift + }Pause
    paswitch {alsa_output.usb-iFi__by_AMR__iFi__by_AMR__HD_USB_Audio-00.analog-stereo, \
    alsa_output.pci-0000_00_1b.0.analog-stereo}

super + {Left,Pause,Right}
    mpc {prev,toggle,next}

# Volume Mute / Lower / Raise
XF86Audio{Mute,LowerVolume,RaiseVolume}
    {amixer -q set Master toggle,\
    amixer -q set Master 5%- unmute,\
    amixer -q set Master 5%+ unmute}

super + {shift + Down,Down,Up}
    {amixer -q set Master toggle,\
    amixer -q set Master 5%- unmute,\
    amixer -q set Master 5%+ unmute}
# }}}

# vim:foldmethod=marker:foldlevel=0
