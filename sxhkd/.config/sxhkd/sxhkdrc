# -----------------------------------------------------------------------------
# sxhkdrc
# Description: Config file for sxhkd
# -----------------------------------------------------------------------------
# Location: $HOME/.config/sxhkd/sxhkdrc
# -----------------------------------------------------------------------------

# -----------------------------------------------------------------------------
# => System
# -----------------------------------------------------------------------------
# {{{
# restart / quit window manager
super + shift + q
    "$HOME/.bin/ui/window_manager/bspwm_close"

# reload sxhkd
super + shift + r
    pkill -USR1 -x sxhkd

# lock
super + shift + s
    "$HOME/.bin/ui/bezel/lock/lock"
# }}}

# -----------------------------------------------------------------------------
# => Monitor
# -----------------------------------------------------------------------------
# {{{
# focus last monitor
super + Tab
    bspc monitor -f 'last'
# }}}

# -----------------------------------------------------------------------------
# => Desktop
# -----------------------------------------------------------------------------
# {{{
# Change to desktop n
super + {1-9,0}
    bspc desktop -f {1-9,10}

# move current node to desktop n
super + shift + {1-9,0}
    bspc node -d {1-9,10}

# Change to prev / next desktop in curren monitor
super + bracket{left,right}
    bspc desktop -f {'prev','next'}'.local'

# Rotate through available layouts
super + space
    bspc desktop -l 'next'
# }}}

# -----------------------------------------------------------------------------
# => Node
# -----------------------------------------------------------------------------
# {{{
# close node
super + c
    bspc node -c

# change node tile method
super + {t,f,m}
    bspc node -t {'tiled','~floating','~fullscreen'}

# change to selected node by location
super + {h,j,k,l}
    bspc node -f {'west','south','north','east'}'.local'

# resize focused node
super + shift + {h,j,k,l}
    {H1='left';  H2='right';  P1='-40'; P2='0';,   \
    H1='bottom'; H2='top';    P1='0';   P2='+40';, \
    H1='top';    H2='bottom'; P1='0';   P2='-40';, \
    H1='right';  H2='left';   P1='+40'; P2='0';}   \
    bspc node -z "$H1" "$P1" "$P2" || bspc node -z "$H2" "$P1" "$P2"

# set node preselection
super + ctrl + {h,j,k,l}
    bspc node -p {'~west','~south','~north','~east'}

# focus last node on current desktop
# super + Tab
    # bspc node -f 'last.local'
# }}}

# -----------------------------------------------------------------------------
# => Programs
# -----------------------------------------------------------------------------
# {{{
# Open new terminal
super + Return
    urxvtc

# Open launcher
super + p
    "$HOME/.bin/ui/bezel/spotlight/spotlight"

# Open web browser
super + w
    firefox

# Open file manager
super + r
    urxvtc -e ranger

# Open music player
super + n
    urxvtc -e ncmpcpp
# }}}

# -----------------------------------------------------------------------------
# => Platform specific keys
# -----------------------------------------------------------------------------
# {{{
# Screen backlight control
@XF86MonBrightness{Down,Up}
    "$HOME/.bin/ui/bezel/backlight/backlight" {'down','up'}

shift + @XF86MonBrightness{Down,Up}
    "$HOME/.bin/ui/bezel/backlight/backlight" {'min','max'}

super + {F1,F2,shift + F1,shift + F2}
    "$HOME/.bin/ui/bezel/backlight/backlight" {'down','up','min','max'}

# Application Control
XF86Launch{A,B}
    "$HOME/.bin/external_monitor" {'enable','disable'}

# Keyboard backlight control
XF86KbdBrightness{Down,Up}
    "$HOME/.bin/ui/bezel/keys/keys" {'down','up'}

shift + XF86KbdBrightness{Down,Up}
    "$HOME/.bin/ui/bezel/keys/keys" {'min','max'}

super + {F5,F6,shift + F5,shift + F6}
    "$HOME/.bin/ui/bezel/keys/keys" {'down','up','min','max'}

# Song control
XF86Audio{Prev,Play,Next}
    mpc {'prev','toggle','next'}

super + {F7,F8,F9}
    mpc {'prev','toggle','next'}

# Volume control
XF86Audio{Mute,LowerVolume,RaiseVolume}
    "$HOME/.bin/ui/bezel/volume/volume" {'toggle','down','up'}

shift + XF86Audio{LowerVolume,RaiseVolume}
    "$HOME/.bin/ui/bezel/volume/volume" {'min','max'}

super + {F10,F11,F12,shift + F11,shift + F12}
    "$HOME/.bin/ui/bezel/volume/volume" {'toggle','down','up','min','max'}

super + a
    paswitch \
    {'alsa_output.usb-iFi__by_AMR__iFi__by_AMR__HD_USB_Audio-00.analog-stereo', \
    'alsa_output.pci-0000_00_1b.0.analog-stereo'}
# }}}

# vim:foldmethod=marker:foldlevel=0
