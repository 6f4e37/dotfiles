# change dir
alias ..='cd ..'
alias ...='cd ../..'

# ls by last modifications
alias ls='ls --color=auto -lhrt'

# makes directory then cds into it
function mkcd ()
{
    mkdir -p "$@" && eval cd "\"\$$#\"";
}

# Sudo !!
alias pls='sudo $(fc -ln -1)'

# ping
alias ping="ping -c 3"

# vpn
alias vpn='sudo openvpn --config ~/.vpn/AirVPN_Canada_UDP-2018.ovpn'
alias vpnu='sudo openvpn --config ~/.vpn/AirVPN_United-States_UDP-2018.ovpn'

# livestreamer
alias livestreamer='livestreamer -p mpv'
